[Unit]
Description=SNMP Subagent service
After=CcspCrSsp.service CcspPandMSsp.service

[Service]
Type=simple
PIDFile=/var/tmp/snmp_subagent_v2.pid
EnvironmentFile=/etc/device.properties
Environment="LOG4C_RCPATH=/etc"
Environment="SNMPDLMODPATH=$PWD/libs"
Environment="MIBDIRS=$PWD/mibs"
Environment="MIBS=ALL"
WorkingDirectory=/usr/ccsp/snmp
#Note: Don't Uncomment Below Line: Each Device needs a conf file to attach to SNMP Master
#ExecStart=/usr/bin/snmp_subagent -x tcp:192.168.254.253:705
ExecStopPost=/bin/sh -c 'echo "`date`: Stopping/Restarting snmp_v2_subagent" >> ${PROCESS_RESTART_LOG}'
Restart=always


[Install]
WantedBy=multi-user.target
