[Unit]
Description=CcspMtaAgentSsp service

After=CcspPandMSsp.service notifyComp.service

[Service]
Type=forking
PIDFile=/var/tmp/CcspMtaAgent.pid
Environment="Subsys=eRT."
Environment="LOG4C_RCPATH=/etc"
EnvironmentFile=/etc/device.properties
WorkingDirectory=/usr/ccsp/mta
#ExecStartPre=/bin/sh -c 'sleep 30'
# NEW: record uptime seconds and wall-clock time just before starting
#ExecStartPre=/bin/sh -c 'UP=$(awk "{print int(\$1)}" /proc/uptime); \
#  echo "$(date "+%H:%M:%S") [BootUpTime] service  echo "$(date "+%H:%M:%S") [BootUpTime] service_CcspMtaAgent_start_uptime=${UP}" >> /rdklogs/logs/BootTime.log'

# Print uptime and a timestamp to BootTime.log just before starting
ExecStartPre=/bin/sh -c '
  UP=$(awk "{print int(\$1)}" /proc/uptime);
  TS=$(date "+%H:%M:%S");
  echo "$TS [BootUpTime] service_CcspMtaAgent_start_uptime=${UP}s" >> /rdklogs/logs/BootTime.log
'
ExecStart=/bin/sh -c '/usr/bin/CcspMtaAgentSsp -subsys $Subsys'
ExecStopPost=/bin/sh -c 'echo "`date`: Stopping/Restarting CcspMtaAgentSsp" >> ${PROCESS_RESTART_LOG}'
Restart=always


[Install]
WantedBy=multi-user.target
